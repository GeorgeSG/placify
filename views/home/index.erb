<div class="row-fluid">
  <div class="hero-unit">
    <h1>Placify</h1>
    <p>A spot for all your favourite places</p>
    <p>
      <a class="btn btn-primary btn-large" href="/about">See more</a>
    </p>
  </div>
</div>
<div class="row-fluid">
  <div class="span4">
    <div class="well">
      <table class="table">
        <thead>
          <tr><th colspan="2">Most Favourited</th></tr>
        </thead>
        <% @top_liked.each_with_index do |point, index| %>
        <tr><td style="width: 10px"><%= index + 1 %></td><td><a href="#"><%= point.name %></a></td></tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="span4">
    <div class="well">
      <table class="table">
        <thead>
          <tr><th colspan="2">Most Viewed</th></tr>
        </thead>
        <% @top_viewed.each_with_index do |point, index| %>
        <tr><td style="width: 10px"><%= index + 1 %></td><td><a href="#"><%= point.name %></a></td></tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="span4">
    <div class="well">
      <table class="table">
        <thead>
          <tr><th colspan="2">Recently Added</th></tr>
        </thead>
        <% @last_added.each_with_index do |point, index| %>
        <tr><td style="width: 10px"><%= index + 1 %></td><td><a href="#"><%= point.name %></a></td></tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
